<!DOCTYPE html>
<html>
    <head>
        <title>Bandera de Cali</title>
        <script type="text/javascript">
  	
		function cargarDibujo(){
                var lienzo = document.getElementById('lienzo');
                var lienzo1 = lienzo.getContext('2d');
                
             
                lienzo1.fillStyle = "rgba(0, 0, 200, 1)";
                lienzo1.fillRect(5,10,200,40);
                
                lienzo1.fillStyle = "rgba(200, 0, 0, 1)";
                lienzo1.fillRect(5,50,200,15);
		                
                lienzo1.fillStyle = "rgba(255, 255, 255, 1)";
                lienzo1.fillRect(5,65,200,40);
                
                lienzo1.fillStyle = "rgba(200, 0, 0, 1)";
                lienzo1.fillRect(5,105,200,15);
                
                lienzo1.fillStyle = "rgba(0, 128, 0, 1)";
                lienzo1.fillRect(5,120,200,40);
		}
                
             
	  </script>
        
    </head>
    <body onload="cargarDibujo()"> 
         <h1>La bandera de Santiago de Cali</h1>
         <canvas id="lienzo" width="600" height="500"></canvas>
    </body>
</html>
